[
  // Editors & Panels
  {
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditor",
    "when": "terminalFocus && editorFocus"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditor",
    "when": "terminalFocus && editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "when": "sideBarFocus",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+m",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.increaseViewSize"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.decreaseViewSize"
  },

  // File explorer
  {
    "key": "ctrl+e",
    "command": "workbench.view.explorer",
    "when": "neovim.ctrlKeysNormal && neovim.init && neovim.mode != 'insert' || terminalFocus"
  },
  {
    "key": "ctrl+e",
    "command": "workbench.view.explorer",
    "when": "vim.mode != 'insert' || terminalFocus"
  },
  {
    "key": "ctrl+E",
    "command": "workbench.view.explorer",
    "when": "terminalFocus"
  },
  {
    "key": "enter",
    "command": "list.select",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "l",
    "command": "list.select",
    "when": "!inputFocus"
  },
  {
    "key": "h",
    "command": "list.collapse",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "j",
    "command": "list.focusDown",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "k",
    "command": "list.focusUp",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "m",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "r",
    "command": "workbench.files.action.refreshFilesExplorer",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "d",
    "command": "moveFileToTrash",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "y",
    "command": "filesExplorer.copy",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "v",
    "command": "explorer.openToSide",
    "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+a",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "ctrl+shift+n",
    "command": "explorer.newFolder"
  },
  {
    "key": "ctrl+n",
    "command": "explorer.newFile"
  },

  // Suggestions
  // {
  //   "key": "tab",
  //   "command": "selectNextSuggestion",
  //   "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
  // },
  // {
  //   "key": "shift+tab",
  //   "command": "selectPrevSuggestion",
  //   "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
  // },
  {
    "key": "ctrl+n",
    "command": "selectNextSuggestion",
    "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
  },
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
  },
  {
    "key": "ctrl+n",
    "command": "-workbench.action.files.newUntitledFile"
  },
  {
    "key": "shift+alt+w",
    "command": "editor.emmet.action.wrapWithAbbreviation"
  },

  // EasyMotion
  {
    "key": "shift+alt+k",
    "command": "vscode-easymotion.jumpToEndOfWord",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+alt+s",
    "command": "editor.action.sortLinesAscending"
  },
  {
    "key": "shift+alt+c",
    "command": "vscode-commitizen.commit"
  },
  {
    "key": "shift+alt+3",
    "command": "workbench.view.extension.mongoDB"
  },
  {
    "key": "ctrl+,",
    "command": "workbench.action.openSettingsJson"
  },
  {
    "key": "shift+alt+t",
    "command": "workbench.action.toggleActivityBarVisibility"
  },
  {
    "key": "ctrl+shift+alt+s",
    "command": "workbench.action.files.saveAll"
  },
  {
    "key": "shift+alt+g",
    "command": "git-graph.view",
    "when": "terminalFocus || editorFocus"
  },
  {
    "key": "alt+/",
    "command": "-gitlens.gitCommands",
    "when": "!gitlens:disabled && config.gitlens.keymap == 'alternate'"
  },
  {
    "key": "shift+alt+j",
    "command": "vscode-easymotion.jumpToWord",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+/",
    "command": "-vscode-easymotion.jumpToWord",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+alt+l",
    "command": "todohighlight.listAnnotations"
  },
  {
    "key": "ctrl+enter",
    "command": "-github.copilot.generate",
    "when": "editorTextFocus && github.copilot.activated"
  },
  {
    "key": "ctrl+.",
    "command": "-docs.write",
    "when": "editorTextFocus && config.docwriter.hotkey.windows == 'Ctrl + .' && editorLangId =~ /typescript|javascript|python|php|java|c|cpp|csharp|dart|ruby|go|rust/"
  },
  {
    "key": "ctrl+.",
    "command": "-docs.write",
    "when": "false"
  }
]
