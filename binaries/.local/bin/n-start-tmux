#!/usr/bin/env bash

# Check if TMUX is not active
if [ -z "$TMUX" ]; then
    # Create a new session named '󱂵 home' and detach immediately
    tmux new-session -d -s '󱂵 home'

    # Create new sessions with specific names and directories in the background
    tmux new-session -d -s ' dotfiles' -c ~/dotfiles
    tmux new-session -d -s ' nvim' -c ~/.config/nvim
    tmux new-session -d -s ' second brain' -c ~/Documents/second-brain.md

    # Attach to the session named '󱂵 home'
    tmux attach -t '󱂵 home'
else
    # Attach to the session named '󱂵 home'
    tmux attach -t '󱂵 home'
fi
