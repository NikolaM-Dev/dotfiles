#!/usr/bin/env bash

function main() {
    HOME_SESSION_NAME="󱂵 home"

    if tmux has-session -t "$HOME_SESSION_NAME" 2>/dev/null; then
        tmux attach
    else
        tmux new-session -d -s "$HOME_SESSION_NAME" -c ~
        tmux new-session -d -s ' dotfiles' -c ~/dotfiles
        tmux new-session -d -s ' downloads' -c ~/Downloads
        tmux new-session -d -s ' nvim' -c ~/.config/nvim
        sesh connect "  english"

        tmux attach -t "$HOME_SESSION_NAME"
    fi
}

main
