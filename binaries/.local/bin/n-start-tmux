#!/usr/bin/env bash

# Check if TMUX is not active
if [ -z "$TMUX" ]; then
    # Create new sessions with specific names and directories in the background
    tmux new-session -d -s ' dotfiles' -c ~/dotfiles
    tmux new-session -d -s ' downloads' -c ~/Downloads
    tmux new-session -d -s '󱂵 home' -c ~
    tmux new-session -d -s ' nvim' -c ~/.config/nvim
    tmux new-session -d -s ' second brain' -c ~/Documents/second-brain.md
    ## TODO: Fix corner case where tmux is not running
    # tmux new-window -t ' second brain' -n "editor" "nvim -c ':ObsidianDailies'"
    # tmux new-window -t ' second brain' -n "commit-job" "n-backup-second-brain"

    # Attach to the session named '󱂵 home'
    tmux attach -t '󱂵 home'
fi
