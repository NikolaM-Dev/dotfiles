#!/usr/bin/env bash

function main() {
	# Select command
	commands=$(fd "^n-*" $HOME/.local/bin --exec basename)
	selected_command=$(printf "%s\n" "${commands[@]}" | fzf-tmux -p 40%,30% --border-label ' ïŠ’ Commander ')
	if [[ ! -n $selected_command ]]; then
		return
	fi

	# Insert command and the prompt
	eval "$selected_command"
}

main
