#!/usr/bin/env bash

commands=$(fd "n-*" $HOME/.local/bin --exec basename)

selected_command=$(printf "%s\n" "${commands[@]}" | fzf --prompt="Select a command> ")

# Ejecuta el comando seleccionado si no es vac√≠o
if [[ ! -n $selected_command ]]; then
  echo "No command selected"
fi

eval "$selected_command"
