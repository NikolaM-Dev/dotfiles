#!/usr/bin/env bash

function main {
    cd $SECOND_BRAIN_PATH

    while true; do
        echo "ðŸ”„ Backing up second brain"

        n-backup-commit --stage-all

        git push origin HEAD

        if [ $# -eq 1 ]; then
            sleep $1
        else
            sleep 30m;
        fi
    done
}

main "$@"
