#!/usr/bin/env bash

function main {
    cd $SECOND_BRAIN_PATH
    bun run format:watch &

    while true; do
        echo "ðŸ”„ Backing up second brain"
        n-backup-commit --stage-all

        if [ $# -eq 1 ]; then
            sleep $1
        else
            sleep 30m;
        fi
    done
}

main "$@"
