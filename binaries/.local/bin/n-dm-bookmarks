function main() {
	# Show bookmarks in dmenu
	choice=$(printf '%s\n' "${!BOOKMARKS[@]}" | sort | dmenu -i -l 12 -p "ï‘¥ Bookmarks ")

	# Open in default browser if valid
	if [[ -n "$choice" ]]; then
		url="${BOOKMARKS[$choice]}"
		if [[ -n "$url" ]]; then
			xdg-open "$url" >/dev/null 2>&1 &
		fi
	fi
}

main
