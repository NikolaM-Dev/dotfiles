#!/bin/bash

# Add a bookmark to a markdown file for a book from zathura

# Usage: zathura-bookmark <book_full_path> <page> <bookmark>
book_full_path=$1
page=$2
book_path="${book_full_path##*/}.md" # remove the path and add .md

shift 2

bookmark=$@

cd ~/Documents/second-brain.md/z/FN/

# save the bookmark in the markdown file
echo "" >> $book_path
echo "-" "$bookmark." "\`page:$page\`" >> $book_path
echo "" >> $book_path
